{
  "compilerOptions": {
    "module": "amd",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "lib":["DOM","ES2020"],
    "jsx": "react",
    "jsxFactory": "tsx",
    "target": "ES5",
    "allowSyntheticDefaultImports": true,    
    "experimentalDecorators": true,
    "preserveConstEnums": true,    
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "importHelpers": true
  },
  "include": [
    "./app/*"
  ],
  "exclude": [
    "node_modules"
  ]
}